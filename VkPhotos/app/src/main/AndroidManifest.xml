<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lesia.android.vkphotos" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".rest_utils.VkPhotosApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:theme="@style/AppTheme"
            android:name=".ui.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".ui.SinglePhotoActivity"
            android:label=""
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/transparentTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lesia.android.vkphotos.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.CommentActivity"
            android:label="@string/title_activity_comment"
            android:parentActivityName=".ui.SinglePhotoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lesia.android.vkphotos.ui.SinglePhotoActivity" />
        </activity>
    </application>

</manifest>
